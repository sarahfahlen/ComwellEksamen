        opgaverDialog?.Open();
    }
    
    private async Task GemOpgaver()
    {
        if (minPlan == null || aktivtDelmaalTilOpgaver == null || aktivPeriode == null)
            return;

        var maal = aktivPeriode.ListMaal
            .FirstOrDefault(m => m.ListDelmaal.Any(d => d.DelmaalId == aktivtDelmaalTilOpgaver.DelmaalId));

        if (maal == null) return;

        await eService.OpdaterDelmaal(minPlan, valgtPeriodeIndex, maal.MaalId, aktivtDelmaalTilOpgaver);
        opgaverDialog?.Close();
    }
    
